.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.controls {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.switch-camera {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}

.take-photo {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}

.icon {
  width: 60%;
  height: 60%;
}

.weui-icon-refresh, .weui-icon-circle {
  font-size: 48rpx;
  color: #000;
}

.preview-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-container image {
  width: 100%;
  height: 80%;
  margin-top: 40rpx;
}

.preview-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx;
}

.preview-buttons button {
  margin: 0 20rpx;
}

.switch-filter {
  position: absolute;
  left: 50rpx;
  width: 120rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.filter-text {
  color: #000;
  font-size: 24rpx;
  text-transform: capitalize;
} 